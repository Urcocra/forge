---
const pathname = new URL(Astro.request.url).pathname;
// Simple normalization for active check
const isActive = (path: string) => {
    if (path === '/') return pathname === '/';
    return pathname.startsWith(path);
};
---
<div class="menu p-4 w-80 min-h-full bg-base-200 text-base-content border-r border-base-300 flex flex-col">
    <div class="mb-8 text-2xl font-bold px-4 flex items-center gap-2">
        <div class="w-10 h-10 rounded-xl bg-primary flex items-center justify-center text-primary-content text-lg shadow-lg">F</div>
        <span class="tracking-widest">FORGE</span>
    </div>
    <ul class="space-y-2 flex-1">
      <li><a href="/" class={isActive('/') ? "active" : ""}>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>
        Dashboard
      </a></li>
      <li><a href="/ranking" class={isActive('/ranking') ? "active" : ""}>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 002 2h2a2 2 0 002-2z" /></svg>
        Ranking
      </a></li>
      <li><a href="/correlation" class={isActive('/correlation') ? "active" : ""}>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" /></svg>
        Correlation Analysis
      </a></li>
      <li><a href="/dimensions" class={isActive('/dimensions') ? "active" : ""}>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" /></svg>
        Dimensions
      </a></li>
      <li><a href="/failures" class={isActive('/failures') ? "active" : ""}>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
        Failures
      </a></li>
      <li><a href="/reproduce" class={isActive('/reproduce') ? "active" : ""}>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" /></svg>
        Reproduce
      </a></li>
      <li><a href="/reports" class={isActive('/reports') ? "active" : ""}>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
        Reports
      </a></li>
    </ul>
    
    <div class="mt-auto">
        <div class="card bg-base-100 shadow-sm border border-base-300">
            <div class="card-body p-4">
                <h3 class="font-bold text-xs uppercase tracking-wider text-base-content/50">System Status</h3>
                <div class="flex items-center gap-2 mt-2">
                    <span class="relative flex h-3 w-3">
                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-success opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-3 w-3 bg-success"></span>
                    </span>
                    <span class="text-xs font-semibold">Operational</span>
                </div>
            </div>
        </div>
    </div>
</div>
