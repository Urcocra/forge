{
  "compilerOptions": {
    /* =========================
     * Output & Structure
     * ========================= */
    "outDir": "./dist",
    "declaration": false,
    "sourceMap": true,
    /* =========================
     * Language & Runtime
     * ========================= */
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /* =========================
     * Type Safety
     * ========================= */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* =========================
     * Build Stability
     * ========================= */
    "noEmitOnError": true
  },
  /* =========================
   * What gets compiled
   * ========================= */
  "include": [
    "src/**/*", // CORE
    "bin/**/*", // CLI entry (forge)
    "cli/**/*", // CLI subcommands (run / compare / report / esg)
    "types/**/*", // (optional future shared types)
    "forge/**/*" // (optional future shared types)
  ],
  /* =========================
   * What never gets compiled
   * ========================= */
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}